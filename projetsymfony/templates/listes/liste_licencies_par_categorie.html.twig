{# templates/listes/liste_licencies_par_categorie.html.twig #}



{% extends 'base.html.twig' %}

{% block title %}Hello MailContactController!{% endblock %}

{% block body %}



    <h2>Cat√©gorie : {{ categories.nom }}</h2>


    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">NumeroLicence</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
        </tr>
        </thead>
        <tbody>
        {% for licencie in licencies %}
            <tr>
                 <th scope="row">{{ loop.index }}</th>

                <td>{{ licencie.getNumeroLicence() }} </td>
                <td>{{ licencie.getNom() }} </td>
                <td> {{ licencie.getPrenom() }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}




