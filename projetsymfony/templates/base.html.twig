                            </ul>
                        </li>



                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    {% endblock %}
    {% block body %}{% endblock %}
